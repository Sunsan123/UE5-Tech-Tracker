{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ue5-tech-tracker/schema/item.schema.json",
  "title": "UE5 Tech Tracker Item",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "version",
    "module_system",
    "module_code",
    "change_type",
    "tags",
    "sources",
    "github_refs",
    "ai",
    "benefits",
    "risks"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 8
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "module_system": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "module_code": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "change_type": {
      "type": "string",
      "enum": [
        "feature",
        "fix",
        "perf",
        "refactor",
        "docs",
        "breaking",
        "deprecation",
        "other"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "sources": {
      "type": "array",
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "url",
          "credibility",
          "excerpt_en",
          "excerpt_zh",
          "translation_note"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "credibility": {
            "type": "string",
            "enum": ["high", "low"]
          },
          "excerpt_en": {
            "type": "string",
            "minLength": 1
          },
          "excerpt_zh": {
            "type": "string",
            "minLength": 1
          },
          "translation_note": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "github_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "id", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["commit", "pr", "issue", "tag", "release", "discussion"]
          },
          "id": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "repo": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      }
    },
    "ai": {
      "type": "object",
      "additionalProperties": false,
      "required": ["generated_fields", "model", "generated_at"],
      "properties": {
        "generated_fields": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "generated_at": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "benefits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["summary", "performance", "quality", "workflow"],
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "performance": {
          "type": "string",
          "minLength": 1
        },
        "quality": {
          "type": "string",
          "minLength": 1
        },
        "workflow": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "risks": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
